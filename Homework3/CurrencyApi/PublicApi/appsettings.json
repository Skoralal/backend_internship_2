{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "GrpcURL": "http://localhost:5188",
    "AllowedHosts": "*",
    "DefaultSettings": {
        "defaultCurrency": "RUB", // текущий курс валют по умолчанию из конфигурации
        "baseCurrency": "USD", // базовая валюта, относительно которой считается курс
        "currencyRoundCount": 2, // Количество знаков после запятой, до которого следует округлять значение курса валют
        "baseURL": "https://api.currencyapi.com/v3/"
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "System": "Error",
                "Microsofr": "Error",
                "Microsoft.Hosting.Lifetime": "Information",
                "Audit.Http.AuditEventHttpClient": "Debug"
            }
        },
        "WriteTo:Console": {
            "Name": "Console",
            "Args": {
                "outputTemplate": "{Timestamp:dd.MM.yy HH:mm:ss.fff} [{Level:u3}] {Message:lj} Properties: {Properies}{NewLine}{Exception}"
            }
        }
    }
}
